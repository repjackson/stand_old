template(name='item_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .five.wide.column
                    a.ui.large.button(href="/shop")
                        i.left.chevron.icon
                        |shop
                    a.ui.icon.button(href="/item/#{_id}/edit" title='edit')
                        i.pencil.grey.icon
                    div
                    +author_info
                    +creation_info
                    //- div
                    //- +viewing
                    //- div
                    //- +voting_full
                .seven.wide.column
                    .ui.header #{title}
                    | !{description}
                    div
                    img.ui.image(src="{{c.url image_id width=400 height=400 gravity='face' crop='fill'}}")
                    
                    +comments
                .five.wide.column
                    .ui.segment
                        a.ui.header(href="/user/#{_author_username}") #{_author_username}
                    .ui.segment
                        .ui.header
                            +icon name='fire'
                            |tribes
                    
