template(name='shifts')
    .ui.padded.stackable.grid
        .four.wide.column
            +shift_cloud
        .twelve.wide.column
            .scrolling
                .ui.stackable.four.cards
                    each shifts
                        +shift_item




template(name='shift_cloud')
    i.tags.icon
    if selected_user_tags
        #clear_tags.ui.primary.icon.button
            i.remove.icon
        each selected_user_tags
            .unselect_tag.ui.primary.button
                strong #{this}
    each all_tags
        .ui.compact.button.select_tag(class=cloud_tag_class) 
            strong #{this.name}


        

template(name='shift_item')
    a.card(href="/shift/#{_id}/view")
        .image
            img.ui.raw.image(src="{{c.url job.image_id width=400 height=300 crop='fill'}}")    
        .content
            a.ui.header(href="/shift/#{_id}/view")
                |#{job.title}
            .ui.list 
                .item #{date} date
                .item #{start_time} start time
                .item #{end_time} end time
                .item #{steward.username} steward (lead?)
            .ui.list
                each contributers
                    .item #{username} contributer
                //- |#{username}
        .content
        



template(name='shift_view')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.column
                    a.ui.fluid.button(href="/shifts")
                        i.chevron.left.icon
                        |shifts
                .eight.wide.column
                    .ui.header 
                        |view shift 
                        +icon name=icon
                        |#{title}
                .four.wide.column
            .row 
                .four.wide.column
                .eight.wide.column
                    .ui.header
                        |recipients
                    each recipients
                        a.ui.header(href="/user/#{username}")
                            img.ui.avatar.image(src="{{c.url profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                            |#{username}
                    +textarea_view key='description' label='description' direct=true
                    +image_view key='image_id' label='image' direct=true
                    div 
                    +array_view key='tags' label='tags' direct=true
                    .spacer
                    .spacer
                    +comments
                    +voting_full
                    //- +array_view key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    //- .ui.fluid.green.button.submit
                    //-     i.checkmark.icon
                    //-     |submit

template(name='shift_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.column
                    .ui.button.delete_item
                        |delete
                        i.large.red.remove.icon
                
                .eight.wide.column
                    .ui.header 
                        +icon name='trust'
                        |edit shift
                .four.wide.column
            .row 
                .four.wide.column
                .eight.wide.column
                    .ui.stackable.two.column.grid
                        .column
                            .ui.header 
                                small author
                                |#{_author.username}
                        .column
                            .ui.header 
                                |recipient
                                |#{target.username}
                            
                    +number_edit key='amount' label='amount' direct=true
                    +key_value_edit key='amount' value=1
                    +key_value_edit key='amount' value=5
                    +key_value_edit key='amount' value=10
                    +key_value_edit key='amount' value=20
                    +textarea_edit key='description' label='description' direct=true
                    +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
                    //- +array_edit key='location_tags' label='location_tags' direct=true
                .four.wide.column
                    .ui.fluid.green.button.submit
                        i.checkmark.icon
                        |submit
