template(name='user_credits')  
    .ui.header 
        +icon name='sprout'
        |Generated
    .ui.link.list.smallscroll
        each earned_items
            .item
                if author.profile_image_id
                    img.ui.avatar.image(src="{{c.url author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                strong #{amount}pt 
                .content
                    a(href="/debit/#{_id}/view")
                        |#{when} from 
                    a(href="/user/#{author.username}")
                        |#{author.username}
                .content
                    .description
                        |#{description}
                        each tags
                            .ui.mini.basic.label #{this}
                    if is_admin
                        +remove_button

