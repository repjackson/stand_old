template(name='user_edit_layout')
    //- img.ui.fluid.image.bg_overlay(src="{{c.url 'fantasy_bg' width=1000 height=1000 crop='crop'}}")    
    +nav
    with current_user          
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    .ui.center.aligned.large.inline.header
                        +i name='settings'
                        | #{current_user.name}
                    .ui.small.inline.header @#{current_user.username}
                    a.ui.fluid.large.green.button(href="/user/#{current_user.username}/") 
                        i.checkmark.icon
                        strong save
                    .ui.vertical.fluid.pointing.large.menu
                        a.item(href="/user/#{current_user.username}/edit/info" class="{{isActivePath regex='user_edit_info'}}") 
                            |info
                            i.info.icon 
                        a.item(href="/user/#{current_user.username}/edit/account" class="{{isActivePath regex='user_edit_account'}}") 
                            |account
                            i.cog.icon 
                        a.item(href="/user/#{current_user.username}/edit/friends" class="{{isActivePath regex='user_edit_friends'}}") 
                            |friends
                            i.users.icon 
                        a.item(href="/user/#{current_user.username}/edit/alerts" class="{{isActivePath regex='user_edit_alerts'}}") 
                            |alerts
                            i.bell.icon 
                        a.item(href="/user/#{current_user.username}/edit/privacy" class="{{isActivePath regex='user_edit_privacy'}}") 
                            | privacy
                            i.lock.icon 
                        a.item(href="/user/#{current_user.username}/edit/membership" class="{{isActivePath regex='user_edit_membership'}}") 
                            | membership
                            i.shield.icon 
                .twelve.wide.column
                    +yield

template(name='user_edit_info')
    .ui.two.column.stackable.grid
        .column
            .spacer
            +textarea_edit key='' label='What do you hope to receive?'
            .spacer
            +textarea_edit key='excites_blurb' label='What excites you about being apart of this community?'
            .spacer
            +textarea_edit key='community_blurb' label='What do you want this community to know about you?'
            .spacer
            
        .column
            +textarea_edit key='contribute_blurb' label='What would you like to contribute (think: superpowers, talents, gifts, resources)'
            .spacer
            +textarea_edit key='' label='emergency contact name'
            .spacer
            +textarea_edit key='' label='emergency contact number'
     
template(name='phone_editor')
    .ui.small.header    
        i.phone.icon
        |phone
    .ui.icon.fluid.input(title='Add Phone')
        i.plus.icon
        input#phone.form-control(type='phone', name='phone', value='{{newNumber}}')
    if current_user.profile.phone
        if current_user.profile.phone_verified
            .ui.label verified
        else
            p
                .ui.label not verified
                a.resend_verification(href='#')
                    |resend code
                .ui.small.icon.button.remove_phone(title='remove phone')
                    i.remove.icon
    else
        .ui.fluid.button.update_phone add phone



template(name='password_edit')
    .ui.small.header
        //- +i name='password'
        i.lock.icon
        |change password
    //- .ui.fluid.input
    //-     input#password(type='password', placeholder='old password')
    .ui.fluid.icon.input
        input#new_password(type='password', placeholder='new password')
    if is_dev
        .ui.fluid.button.send_enrollment_email
            |send enrollment email
    if is_admin
        .ui.fluid.button.reset_password
            |reset password
    .ui.fluid.large.button.set_password
        i.lock.icon
        //- +i name='password' cl='ui mini inline image'
        | set password
            
            
            
template(name='emails_edit')
    //- .ui.small.header 
    //-     i.envelope.icon
    //-     | email(s)
    //- #test_email.ui.large.button test email
    .ui.divided.list
        each current_user.emails
            .item 
                // unless verified
                //     .right.floated.content
                //         .ui.button Verify
                .content
                    if verified
                        .ui.large.label(title='verified')
                            | #{address}
                            i.checkmark.icon
                    else
                        .ui.large.label
                            //- i.ban.icon
                            | #{address}
                        .send_verification_email.ui.button 
                            |verify
                            i.caret.right.icon
                    .ui.small.icon.button.remove_email
                        i.remove.icon
    .ui.action.large.fluid.icon.action.input
        input#new_email(type='email' placeholder='add new email address' autocomplete="off")
        #add_email.ui.submit.icon.button 
            i.plus.icon
            |email



